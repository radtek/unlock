<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ik_blue_gray">

    <FrameLayout
        android:id="@+id/frame_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SurfaceView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <buaa.irisking.scanner.RoundProgressBar
            android:id="@+id/roundProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android_custom:roundColor="@android:color/white"
            android_custom:roundProgressColor="#00FF00"
            android_custom:roundWidth="6dip"
            android_custom:textIsDisplayable="false" />

        <buaa.irisking.scanner.EyeView
            android:id="@+id/eye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ie_final_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#FF0000"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="160dp"
                android:layout_height="120dp" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/pincodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:layout_gravity="center"
            android:textAlignment="center" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="2"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="3"
                    android:textSize="10sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="4"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="5"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="6"
                    android:textSize="10sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="7"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="8"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="9"
                    android:textSize="10sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonBS"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="->"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="0"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_unlock"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="@string/start_identify"
                    android:textSize="10sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</RelativeLayout>